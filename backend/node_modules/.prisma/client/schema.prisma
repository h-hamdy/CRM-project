generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String
  lastName  String

  number String?
}

model Info {
  id      Int     @id @default(autoincrement())
  address String?
  email   String? @unique
  phone   String?
  website String?
}

model Client {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  type      String
  phone     String
  address   String?
  note      String?
}
