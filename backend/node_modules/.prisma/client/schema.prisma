generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:123@localhost:5434/mydb"
}

model User {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String
  lastName  String

  number String?
}

model Info {
  id      Int     @id @default(autoincrement())
  address String?
  email   String? @unique
  phone   String?
  website String?
}

model Client {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  type      String
  phone     String
  address   String?
  note      String?
}

model Table {
  id      Int       @id
  name    String
  columns Column[]
  rows    RowData[]
}

model Column {
  id      Int    @id @default(autoincrement())
  name    String
  tableId Int
  table   Table  @relation(fields: [tableId], references: [id])
}

model RowData {
  id      Int   @id @default(autoincrement())
  tableId Int
  data    Json
  table   Table @relation(fields: [tableId], references: [id])
}

model Bill {
  id            Int    @id @default(autoincrement())
  factureNumber String @unique
  items         Item[]
}

model Item {
  id     Int    @id @default(autoincrement())
  Qte    Int
  Tarif  Int?
  TarifN Int?
  Title  String
  Total  String
  key    String
  billId Int
  Bill   Bill   @relation(fields: [billId], references: [id])
}
